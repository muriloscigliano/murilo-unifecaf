---
import Layout from "@/layouts/Layout.astro";
import { FeatureCard } from "@/components/FeatureCard";
import { TechTable } from "@/components/TechTable";
import { WorkflowStep } from "@/components/WorkflowStep";
import { ArchitectureLayer } from "@/components/ArchitectureLayer";
import { PromptTechnique } from "@/components/PromptTechnique";
import { PromptTree, PromptNode } from "@/components/PromptTree";
import { PromptViewer } from "@/components/PromptViewer";
import { PromptCard } from "@/components/PromptCard";
import { SectionDivider } from "@/components/SectionDivider";
import { ValueProposition } from "@/components/ValueProposition";
import { Button } from "@/components/ui/button";
import FullWidthImage from "@/components/FullWidthImage.astro";
import TextReveal from "@/components/vue/TextReveal.vue";
import FadeIn from "@/components/vue/FadeIn.vue";
import NumberCounter from "@/components/vue/NumberCounter.vue";
import {
  Brain,
  FileText,
  RefreshCw,
  BarChart3,
  Zap,
  TrendingUp,
  Globe,
  Settings,
  Bot,
  Workflow,
  MessageSquare,
  Database,
  Sparkles,
  Code,
  Image,
  FileCode,
  FileCheck,
  Mail,
  Save,
  Target,
  CheckSquare,
  RotateCw,
  BookOpen,
  Lightbulb,
  Ruler,
  Scale,
  MessageCircle,
  Puzzle,
  X,
  Check,
  Sparkles as SparklesIcon,
  Copy,
  Compass,
  UserCheck,
  DoorOpen,
  Map,
  FileSignature,
  Network,
  Shield,
  RotateCcw,
  ChevronDown,
  ChevronUp,
} from "lucide-react";

const project = {
  title: "Sistema Inteligente de Qualificação e Automação de Leads com IA",
  description:
    "Solução completa que automatiza a qualificação de leads e geração de propostas comerciais utilizando Inteligência Artificial Generativa e automação de workflows.",
  technologies: {
    platform: ["n8n", "Astro", "Vue", "React"],
    ai: ["OpenAI GPT-4o", "GPT-4o-mini", "Gemini Nano"],
    service: ["Supabase", "Banana.dev", "Nutrient.io"],
    database: ["PostgreSQL"],
  },
  features: [
    {
      icon: Brain,
      title: "Qualificação Inteligente",
      description:
        "Análise automática de leads usando IA para determinar qualidade e roteamento inteligente.",
    },
    {
      icon: FileText,
      title: "Geração Automática de Propostas",
      description:
        "Criação automática de PDFs profissionais com imagens personalizadas e emails contextualizados.",
    },
    {
      icon: RefreshCw,
      title: "Automação Completa",
      description:
        "Workflow end-to-end que transforma conversas em propostas sem intervenção manual.",
    },
    {
      icon: BarChart3,
      title: "Roteamento Inteligente",
      description:
        "Sistema que direciona leads qualificados para propostas completas e outros para nurturing.",
    },
    {
      icon: Zap,
      title: "Resposta Rápida",
      description:
        "Leads recebem propostas profissionais em minutos, aumentando taxa de conversão.",
    },
    {
      icon: TrendingUp,
      title: "Escalabilidade",
      description:
        "Processa múltiplos leads simultaneamente, permitindo crescimento sem aumentar equipe.",
    },
  ],
  stats: [
    { label: "Redução de Tempo", value: 95, suffix: "%" },
    { label: "Workflows n8n", value: 2, suffix: "" },
    { label: "Integrações", value: 5, suffix: "" },
    { label: "Nós de Automação", value: 17, suffix: "" },
  ],
};
---

<Layout title="Sistema de Qualificação de Leads com IA - Projeto Universitário">
  <main class="min-h-screen bg-gradient-to-br from-[var(--background)] via-[var(--background)] to-[var(--muted)]/30">
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <FadeIn client:load>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--primary)]/10 text-[var(--primary)] text-sm font-medium mb-8">
            <span>Telos - AI Strategist</span>
          </div>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            <TextReveal client:load text="Sistema Inteligente de Qualificação e Automação de Leads com IA" />
          </h1>
          <p class="text-xl md:text-2xl text-[var(--muted-foreground)] max-w-5xl mx-auto leading-relaxed mb-12 hyphens-none" style="word-break: normal; overflow-wrap: break-word;">
            {project.description}
          </p>
        </FadeIn>
      </div>
    </section>

    <FullWidthImage src="/placeholder-hero.jpg" alt="Sistema de Automação de Leads" />

    <!-- About Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">About</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Sistema de automação que integra Inteligência Artificial Generativa com workflows automatizados para qualificar leads e gerar propostas comerciais profissionais.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Com recursos abrangentes, o sistema permite navegar e gerenciar leads de forma eficiente, garantindo que cada proposta seja personalizada, contextualizada e entregue em minutos, não horas.
            </p>
          </div>
        </div>
      </FadeIn>
    </section>

    <SectionDivider />

    <!-- The Mission Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">The Mission</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              No processo de desenvolvimento deste sistema, nosso objetivo foi criar uma solução que automatize completamente o processo de qualificação de leads e geração de propostas comerciais.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O público-alvo são empresas que desejam otimizar seu processo de vendas, mas não possuem recursos para manter uma equipe dedicada à criação manual de propostas. Buscamos fornecer uma interface segura e intuitiva, transmitida em um tom profissional e eficiente, que inspire confiança nos usuários.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O objetivo final foi capacitá-los em sua jornada rumo à automação de vendas e garantir que sintam segurança e eficiência no processo.
            </p>
          </div>
        </div>
      </FadeIn>
    </section>

    <SectionDivider />

    <!-- The Challenge Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">The Challenge</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O objetivo principal do projeto foi desenvolver um design visualmente impactante que seja não apenas limpo e acessível, mas também altamente funcional. Focamos em simplificar recursos complexos para melhorar a facilidade de uso para potenciais usuários.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Buscamos criar um sistema que inspire usuários e otimize sua jornada através da plataforma, tornando-a o mais eficiente possível, transformando um processo que tradicionalmente leva horas em minutos.
            </p>
          </div>
        </div>
      </FadeIn>
    </section>



    <FullWidthImage src="/challenge.png" alt="The Challenge" />


    <!-- Stats Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-14">Results</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-7">
            {project.stats.map((stat) => (
              <div class="text-center p-9 rounded-3xl bg-[var(--card)] border-2 border-[var(--border)] hover:border-[var(--primary)] transition-all hover:scale-[1.02]">
                <div class="text-5xl md:text-6xl font-bold mb-4 text-[var(--primary)]">
                  <NumberCounter client:load value={stat.value} />{stat.suffix}
                </div>
                <div class="text-sm text-[var(--muted-foreground)] font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </FadeIn>
    </section>

    <SectionDivider />

    <!-- Key Features Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Key Features</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Sistema completo que automatiza desde a qualificação até o envio de propostas profissionais
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-7">
            {project.features.map((feature) => (
              <FeatureCard
                icon={feature.icon}
                title={feature.title}
                description={feature.description}
              />
            ))}
          </div>
        </div>
      </FadeIn>
    </section>

    <FullWidthImage src="/placeholder-architecture.jpg" alt="System Architecture" />


    <!-- Architecture Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">System Architecture</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Sistema em camadas com integração completa entre frontend, API, IA e automação
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-7">
            <ArchitectureLayer
              icon={Globe}
              title="Frontend"
              description="Interface interativa com Astro e Vue"
              components={["Landing page (SSG)", "Chat interativo", "Animações suaves"]}
              color="blue"
            />
            <ArchitectureLayer
              icon={Settings}
              title="API Layer"
              description="Rotas Astro com integração OpenAI"
              components={["Endpoint /api/chat", "Otimização de tokens", "Extração de leads", "Operações Supabase"]}
              color="purple"
            />
            <ArchitectureLayer
              icon={Bot}
              title="AI Layer"
              description="GPT-4o para análise e geração"
              components={["Prompts dinâmicos", "Memória conversacional", "Extração estruturada", "Prompts por estágio"]}
              color="orange"
            />
            <ArchitectureLayer
              icon={Workflow}
              title="Automation"
              description="n8n workflows end-to-end"
              components={["Roteador inteligente", "Gerador de propostas", "Automação de follow-up", "17 nós de automação"]}
              color="green"
            />
          </div>
        </div>
      </FadeIn>
    </section>

    <SectionDivider />

    <!-- Main Workflow Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Main Workflow</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Do chat inicial até o envio automático da proposta profissional
          </p>
          <div class="space-y-5">
            <WorkflowStep
              number="1"
              icon={MessageSquare}
              title="Lead Conversation"
              description="Chat interativo coleta informações do projeto, orçamento e prazo através de conversa natural"
            />
            <WorkflowStep
              number="2"
              icon={Database}
              title="Structured Data Extraction"
              description="GPT-4o-mini extrai informações estruturadas em JSON e armazena no Supabase PostgreSQL"
            />
            <WorkflowStep
              number="3"
              icon={Zap}
              title="Automatic Trigger"
              description="Supabase dispara automaticamente webhook para n8n quando um novo lead é criado"
            />
            <WorkflowStep
              number="4"
              icon={Brain}
              title="AI Quality Analysis"
              description="GPT-4o analisa a qualidade do lead calculando uma pontuação baseada em interesse, orçamento, urgência e clareza"
            />
            <WorkflowStep
              number="5"
              icon={BarChart3}
              title="Smart Routing"
              description="Sistema direciona leads qualificados (pontuação ≥ 70) para proposta completa ou nutrição automática"
            />
          </div>
        </div>
      </FadeIn>
    </section>

    <!-- Good Lead Path Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-14">
            <h2 class="text-3xl md:text-4xl font-bold mb-5">Good Lead Path (Score ≥ 70)</h2>
            <p class="text-[var(--muted-foreground)] max-w-2xl mx-auto text-lg">
              Workflow completo de 8 nós para leads qualificados: geração de proposta profissional com PDF, imagem personalizada e email contextualizado
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <WorkflowStep
              number="1"
              icon={Sparkles}
              title="AI Enhance Quote"
              description="GPT-4o melhora e estrutura informações do lead em proposta profissional"
              variant="good"
            />
            <WorkflowStep
              number="2"
              icon={Code}
              title="Parse Enhanced Quote"
              description="Nó de Código extrai dados estruturados da resposta da IA em JSON"
              variant="good"
            />
            <WorkflowStep
              number="3"
              icon={Image}
              title="AI Generate Cover Image"
              description="Gemini Nano via Banana.dev gera imagem de capa personalizada baseada no projeto"
              variant="good"
            />
            <WorkflowStep
              number="4"
              icon={FileCode}
              title="Generate HTML for PDF"
              description="Nó de Código cria HTML profissional com imagem de capa, branding e seções organizadas"
              variant="good"
            />
            <WorkflowStep
              number="5"
              icon={FileCheck}
              title="Convert HTML to PDF"
              description="API Nutrient.io converte HTML em PDF profissional pronto para anexo"
              variant="good"
            />
            <WorkflowStep
              number="6"
              icon={Mail}
              title="AI Write Quote Email"
              description="GPT-4o gera email personalizado com saudação, referência ao projeto e chamada para ação"
              variant="good"
            />
            <WorkflowStep
              number="7"
              icon={Mail}
              title="Send Email with PDF"
              description="Nó de Envio de Email envia proposta profissional com PDF anexado para o lead"
              variant="good"
            />
            <WorkflowStep
              number="8"
              icon={Save}
              title="Update Lead Status"
              description="Supabase atualiza status do lead para 'quoted' e registra timestamp de envio"
              variant="good"
            />
          </div>
        </div>
      </FadeIn>
    </section>

    <!-- Bad Lead Path Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-14">
            <h2 class="text-3xl md:text-4xl font-bold mb-5">Bad Lead Path (Score &lt; 70)</h2>
            <p class="text-[var(--muted-foreground)] max-w-2xl mx-auto text-lg">
              Workflow de nutrição com 4 nós para leads que precisam de mais informações antes de receber proposta completa
            </p>
          </div>
          <div class="space-y-5">
            <WorkflowStep
              number="1"
              icon={Mail}
              title="AI Write Nurture Email"
              description="GPT-4o-mini gera email de acompanhamento solicitando gentilmente informações faltantes (orçamento, prazo)"
              variant="bad"
            />
            <WorkflowStep
              number="2"
              icon={Code}
              title="Parse Email"
              description="Nó de Código extrai conteúdo do email (assunto e corpo HTML)"
              variant="bad"
            />
            <WorkflowStep
              number="3"
              icon={Mail}
              title="Send Nurture Email"
              description="Nó de Envio de Email envia email de nutrição com link para continuar conversa"
              variant="bad"
            />
            <WorkflowStep
              number="4"
              icon={Save}
              title="Update Lead Status"
              description="Supabase atualiza status para 'nurturing' e inicia sequência de acompanhamento"
              variant="bad"
            />
          </div>
        </div>
      </FadeIn>
    </section>

    <FullWidthImage src="/placeholder-technologies.jpg" alt="Technologies Stack" />


    <!-- Technologies Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Technologies</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Stack tecnológico completo para automação inteligente de leads
          </p>
          <div class="space-y-7">
            <TechTable
              category="Automation Platform"
              description="Principais ferramentas para construir e executar workflows"
              technologies={project.technologies.platform}
            />
            <TechTable
              category="AI Engine"
              description="Modelos de Inteligência Artificial para análise e geração de conteúdo"
              technologies={project.technologies.ai}
            />
            <TechTable
              category="Integrated Services"
              description="APIs e serviços externos para funcionalidades específicas"
              technologies={project.technologies.service}
            />
            <TechTable
              category="Database"
              description="Armazenamento e gerenciamento de dados estruturados"
              technologies={project.technologies.database}
            />
          </div>
        </div>
      </FadeIn>
    </section>

    <SectionDivider />

    <!-- Prompt Engineering Section -->
    <section class="container mx-auto px-4 py-20">
      <FadeIn client:load>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Prompt Engineering</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-3xl mx-auto text-lg">
            Metodologia estruturada e iterativa para criar prompts eficazes que maximizam a qualidade das respostas da IA
          </p>

          <!-- Context & Methodology -->
          <div class="mb-14">
            <div class="max-w-4xl mx-auto space-y-6">
              <div class="p-8 rounded-3xl bg-[var(--card)] border-2 border-[var(--border)]">
                <h3 class="text-xl font-semibold mb-4">Metodologia</h3>
                <p class="text-[var(--muted-foreground)] mb-4 leading-relaxed">
                  Todos os prompts seguem princípios estruturados para garantir consistência e qualidade nas respostas da IA:
                </p>
                <ul class="space-y-3 text-[var(--muted-foreground)]">
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Definição Clara de Papel:</strong> Cada prompt define claramente o papel de Telos como estrategista de IA</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Contexto do Estúdio:</strong> Filosofia e valores do Are You Human? Studio incluídos em todos os prompts</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Saída Estruturada:</strong> Formato JSON especificado para consistência e integração</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Orientacao de Tom:</strong> Tom profissional mas humano mantido em todas as comunicações</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Especificação de Restrições:</strong> Regras e limites claros definidos para garantir precisão</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Design Modular:</strong> Prompts podem ser compostos dinamicamente conforme necessário</span>
                  </li>
                </ul>
              </div>

              <div class="p-8 rounded-3xl bg-[var(--card)] border-2 border-[var(--border)]">
                <h3 class="text-xl font-semibold mb-4">Integração no n8n</h3>
                <p class="text-[var(--muted-foreground)] mb-4 leading-relaxed">
                  Os prompts são integrados nos workflows n8n usando:
                </p>
                <ul class="space-y-3 text-[var(--muted-foreground)]">
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Mensagem do Sistema:</strong> Contexto estático e instruções permanentes</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Mensagem do Usuário:</strong> Dados dinâmicos extraídos das informações do lead</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <span class="text-[var(--primary)] mt-1">•</span>
                    <span><strong>Modo JSON:</strong> Quando disponível para saída estruturada consistente</span>
                  </li>
                </ul>
              </div>

              <div class="p-8 rounded-3xl bg-[var(--card)] border-2 border-[var(--border)]">
                <h3 class="text-xl font-semibold mb-4">Uso nos Workflows</h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-[var(--muted-foreground)]">
                  <div>
                    <h4 class="font-semibold mb-2 text-[var(--foreground)]">Good Lead Path</h4>
                    <p class="text-sm">Usa prompts 01, 03 e 05</p>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-2 text-[var(--foreground)]">Bad Lead Path</h4>
                    <p class="text-sm">Usa prompt 04</p>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-2 text-[var(--foreground)]">Router</h4>
                    <p class="text-sm">Usa prompt 02</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Telos Prompts Overview -->
          <div class="mb-14">
            <div class="text-center mb-8">
              <h3 class="text-2xl font-semibold mb-3">Sistema de Prompts do Telos</h3>
              <p class="text-sm text-[var(--muted-foreground)]">
                Arquitetura modular de prompts que compõem a personalidade e comportamento do Telos. Arquivos completos disponíveis em <code class="px-3 py-1.5 rounded-xl bg-[var(--muted)]/30 text-xs">/data/prompts/</code>:
                <a href="https://github.com/muriloscigliano/murilo-unifecaf/tree/main/data/prompts" target="_blank" rel="noopener noreferrer" class="text-[var(--primary)] hover:underline ml-1">
                  Ver no GitHub
                </a>
              </p>
            </div>
          </div>

        <FullWidthImage src="/placeholder-prompts.jpg" alt="Prompt Engineering" />

          <!-- Core Prompts -->
          <div class="mb-14">
            <h4 class="text-xl font-semibold mb-6 text-[var(--muted-foreground)] uppercase tracking-wide">Core Prompts</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <PromptCard
                client:load
                icon={Target}
