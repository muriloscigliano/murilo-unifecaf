---
import Layout from "@/layouts/Layout.astro";
import { FeatureCard } from "@/components/FeatureCard";
import { TechCard } from "@/components/TechCard";
import { WorkflowStep } from "@/components/WorkflowStep";
import { ArchitectureLayer } from "@/components/ArchitectureLayer";
import { PromptTechnique } from "@/components/PromptTechnique";
// import { PromptTree, PromptNode } from "@/components/PromptTree";
// import { PromptViewer } from "@/components/PromptViewer";
import { PromptCard } from "@/components/PromptCard";
import { SectionDivider } from "@/components/SectionDivider";
// import { ValueProposition } from "@/components/ValueProposition";
import { Button } from "@/components/ui/button";
import FullWidthImage from "@/components/FullWidthImage.astro";
import FadeIn from "@/components/vue/FadeIn.vue";
import NumberCounter from "@/components/vue/NumberCounter.vue";
import TextRevealLines from "@/components/vue/TextRevealLines.vue";
import StaggerIn from "@/components/vue/StaggerIn.vue";
import {
  Brain,
  FileText,
  RefreshCw,
  BarChart3,
  Zap,
  TrendingUp,
  Globe,
  Settings,
  Bot,
  Workflow,
  MessageSquare,
  Database,
  Sparkles,
  Code,
  Image,
  FileCode,
  FileCheck,
  Mail,
  Save,
  Target,
  CheckSquare,
  RotateCw,
  BookOpen,
  Lightbulb,
  Ruler,
  Scale,
  MessageCircle,
  Puzzle,
  X,
  Check,
  Sparkles as SparklesIcon,
  Copy,
  Compass,
  UserCheck,
  DoorOpen,
  Map,
  FileSignature,
  Network,
  Shield,
  RotateCcw,
  ChevronDown,
  ChevronUp,
} from "lucide-react";
import FullWidthVideo from "@/components/FullWidthVideo.astro";

const project = {
  title: "Sistema Inteligente de Qualificação e Automação de Leads com IA",
  description:
    "Solução completa que automatiza a qualificação de leads e geração de propostas comerciais utilizando Inteligência Artificial Generativa e automação de workflows.",
  technologies: {
    platform: ["n8n", "Astro", "Vue", "React"],
    ai: ["OpenAI GPT-5", "GPT-4o-mini", "Gemini Flash 2.5"],
    service: ["Supabase", "Vercel", "Nutrient.io"],
    database: ["PostgreSQL"],
  },
  features: [
    {
      icon: Brain,
      title: "Qualificação Inteligente",
      description:
        "Análise automática de leads usando IA para determinar qualidade e roteamento inteligente.",
    },
    {
      icon: FileText,
      title: "Geração Automática de Propostas",
      description:
        "Criação automática de PDFs profissionais com imagens personalizadas e emails contextualizados.",
    },
    {
      icon: RefreshCw,
      title: "Automação Completa",
      description:
        "Workflow end-to-end que transforma conversas em propostas sem intervenção manual.",
    },
    {
      icon: BarChart3,
      title: "Roteamento Inteligente",
      description:
        "Sistema que direciona leads qualificados para propostas completas e outros para nurturing.",
    },
    {
      icon: Zap,
      title: "Resposta Rápida",
      description:
        "Leads recebem propostas profissionais em minutos, aumentando taxa de conversão.",
    },
    {
      icon: TrendingUp,
      title: "Escalabilidade",
      description:
        "Processa múltiplos leads simultaneamente, permitindo crescimento sem aumentar equipe.",
    },
  ],
  stats: [
    { label: "Redução de Tempo", value: 95, suffix: "%" },
    { label: "Workflows n8n", value: 2, suffix: "" },
    { label: "Integrações", value: 5, suffix: "" },
    { label: "Nós de Automação", value: 17, suffix: "" },
  ],
};
---

<Layout title="Sistema de Qualificação de Leads com IA - Projeto Universitário">
  <main class="min-h-screen bg-[var(--background)]">
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-16 md:py-20">
      <div class="max-w-6xl mx-auto text-center">
        <FadeIn client:load>
          <div class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-full bg-[var(--primary)]/10 border border-[var(--primary)]/20 text-[var(--primary)] text-sm font-medium mb-8 backdrop-blur-sm transition-all hover:bg-[var(--primary)]/15 hover:border-[var(--primary)]/30">
            <div class="w-2 h-2 rounded-full bg-[var(--primary)] animate-pulse"></div>
            <span>Telos - AI Strategist</span>
          </div>
          <TextRevealLines client:load>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
              <span class="block reveal-line">Sistema Inteligente de</span>
              <span class="block reveal-line">Qualificação e Automação</span>
              <span class="block reveal-line">de Leads com IA</span>
            </h1>
          </TextRevealLines>
          <p class="text-xl md:text-2xl text-[var(--muted-foreground)] max-w-6xl mx-auto leading-relaxed hyphens-none" style="word-break: normal; overflow-wrap: break-word;">
            {project.description}
          </p>
        </FadeIn>
      </div>
    </section>

    <FullWidthImage src="/img/cover-generated-min.jpg" alt="Telos AI Strategist" />

    <!-- About Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">Sobre</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Telos é um assistente de IA estrategista que qualifica leads via chat conversacional, extrai dados estruturados e gera propostas comerciais personalizadas automaticamente para empresas que querem usar AI em seus negócios.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Sistema de automação que integra Inteligência Artificial Generativa com workflows automatizados para qualificar leads e gerar propostas comerciais profissionais.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Com recursos abrangentes, o sistema permite navegar e gerenciar leads de forma eficiente, garantindo que cada proposta seja personalizada, contextualizada e entregue em minutos, não horas.
            </p>
          </div>
        </div>
      </StaggerIn>
    </section>

    <SectionDivider />

    <!-- The Mission Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">A Missão</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              No processo de desenvolvimento deste sistema, nosso objetivo foi criar uma solução que automatize completamente o processo de qualificação de leads e geração de propostas comerciais.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O público-alvo são empresas que desejam otimizar seu processo de vendas, mas não possuem recursos para manter uma equipe dedicada à criação manual de propostas. Buscamos fornecer uma interface segura e intuitiva, transmitida em um tom profissional e eficiente, que inspire confiança nos usuários.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O objetivo final foi capacitá-los em sua jornada rumo à automação de vendas e garantir que sintam segurança e eficiência no processo.
            </p>
          </div>
        </div>
      </StaggerIn>
    </section>

    <SectionDivider />

    <!-- The Challenge Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">O Desafio</h2>
          <div class="space-y-5">
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              O objetivo principal do projeto foi desenvolver um design visualmente impactante que seja não apenas limpo e acessível, mas também altamente funcional. Focamos em simplificar recursos complexos para melhorar a facilidade de uso para potenciais usuários.
            </p>
            <p class="text-lg text-[var(--muted-foreground)] leading-relaxed">
              Buscamos criar um sistema que inspire usuários e otimize sua jornada através da plataforma, tornando-a o mais eficiente possível, transformando um processo que tradicionalmente leva horas em minutos.
            </p>
          </div>
        </div>
      </StaggerIn>
    </section>

	 <FullWidthVideo src="#" alt="The Challenge" />

    <!-- Stats Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-14">Resultados</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-7">
            {project.stats.map((stat) => (
              <div class="text-center p-9 rounded-3xl bg-[var(--card)] border border-[var(--border)]/60 hover:border-[var(--primary)]/30 transition-all hover:scale-[1.01]">
                <div class="text-5xl md:text-6xl font-bold mb-4 text-[var(--primary)]">
                  <NumberCounter client:load value={stat.value} />{stat.suffix}
                </div>
                <div class="text-sm text-[var(--muted-foreground)] font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </StaggerIn>
    </section>

    <SectionDivider />

    <!-- Key Features Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={80}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Principais Funcionalidades</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Sistema completo que automatiza desde a qualificação até o envio de propostas profissionais
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-7">
            {project.features.map((feature) => (
              <FeatureCard
                icon={feature.icon}
                title={feature.title}
                description={feature.description}
              />
            ))}
          </div>
        </div>
      </StaggerIn>
    </section>

	<FullWidthImage src="/img/areyouhuman-telos.jpg" alt="Telos AI Strategist - Are You Human Chat Interface" />


    <!-- Architecture Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Arquitetura do Sistema</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Sistema em camadas com integração completa entre frontend, API, IA e automação
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-7">
            <ArchitectureLayer
              icon={Globe}
              title="Frontend"
              description="Interface interativa com Astro e Vue"
              components={["Landing page (SSG)", "Chat interativo", "Animações suaves"]}
              color="blue"
            />
            <ArchitectureLayer
              icon={Settings}
              title="API Layer"
              description="Rotas Astro com integração OpenAI"
              components={["Endpoint /api/chat", "Otimização de tokens", "Extração de leads", "Operações Supabase"]}
              color="purple"
            />
            <ArchitectureLayer
              icon={Bot}
              title="AI Layer"
              description="GPT-5 para análise e geração no chat"
              components={["Prompts dinâmicos", "Memória conversacional", "Extração estruturada", "Prompts por estágio"]}
              color="orange"
            />
            <ArchitectureLayer
              icon={Workflow}
              title="Automation"
              description="n8n workflows end-to-end"
              components={["Roteador inteligente", "Gerador de propostas", "Automação de follow-up", "17 nós de automação"]}
              color="green"
            />
          </div>
        </div>
      </StaggerIn>
    </section>

	<SectionDivider />

    <!-- Main Workflow Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Workflow Principal</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Do chat inicial até o envio automático da proposta profissional
          </p>
          <div class="space-y-5">
            <WorkflowStep
              number="1"
              icon={MessageSquare}
              title="Lead Conversation"
              description="Chat interativo com GPT-5 coleta informações do projeto, orçamento e prazo através de conversa natural"
            />
            <WorkflowStep
              number="2"
              icon={Database}
              title="Structured Data Extraction"
              description="GPT-4o-mini extrai informações estruturadas em JSON e armazena no Supabase PostgreSQL"
            />
            <WorkflowStep
              number="3"
              icon={Zap}
              title="Automatic Trigger"
              description="Supabase dispara automaticamente webhook para n8n quando um novo lead é criado"
            />
            <WorkflowStep
              number="4"
              icon={Brain}
              title="AI Quality Analysis"
              description="GPT-4o-mini analisa a qualidade do lead calculando uma pontuação baseada em interesse, orçamento, urgência e clareza"
            />
            <WorkflowStep
              number="5"
              icon={BarChart3}
              title="Smart Routing"
              description="Sistema direciona leads qualificados (pontuação ≥ 70) para proposta completa ou nutrição automática"
            />
          </div>
        </div>
      </StaggerIn>
    </section>
	

	<FullWidthImage src="/img/n8n-workflow.png" alt="n8n Workflow Automation" />

    <!-- Good Lead Path Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={80}>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-14">
            <h2 class="text-3xl md:text-4xl font-bold mb-5">Caminho de Leads Qualificados (Score ≥ 70)</h2>
            <p class="text-[var(--muted-foreground)] max-w-2xl mx-auto text-lg">
              Workflow completo de 8 nós para leads qualificados: geração de proposta profissional com PDF, imagem personalizada e email contextualizado
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div class="space-y-5">
              <WorkflowStep
                number="1"
                icon={Sparkles}
                title="AI Enhance Quote"
                description="GPT-4o-mini melhora e estrutura informações do lead em proposta profissional"
                variant="good"
              />
              <WorkflowStep
                number="2"
                icon={Code}
                title="Parse Enhanced Quote"
                description="Nó de Código extrai dados estruturados da resposta da IA em JSON"
                variant="good"
              />
              <WorkflowStep
                number="3"
                icon={Image}
                title="AI Generate Cover Image"
                description="Gemini Flash 2.5 gera imagem de capa personalizada baseada no projeto"
                variant="good"
              />
              <WorkflowStep
                number="4"
                icon={FileCode}
                title="Generate HTML for PDF"
                description="Nó de Código cria HTML profissional com imagem de capa, branding e seções organizadas"
                variant="good"
              />
            </div>
            <div class="space-y-5">
              <WorkflowStep
                number="5"
                icon={FileCheck}
                title="Convert HTML to PDF"
                description="API Nutrient.io converte HTML em PDF profissional pronto para anexo"
                variant="good"
              />
              <WorkflowStep
                number="6"
                icon={Mail}
                title="AI Write Quote Email"
                description="GPT-4o-mini gera email personalizado com saudação, referência ao projeto e chamada para ação"
                variant="good"
              />
              <WorkflowStep
                number="7"
                icon={Mail}
                title="Send Email with PDF"
                description="Nó de Envio de Email envia proposta profissional com PDF anexado para o lead"
                variant="good"
              />
              <WorkflowStep
                number="8"
                icon={Save}
                title="Update Lead Status"
                description="Supabase atualiza status do lead para 'quoted' e registra timestamp de envio"
                variant="good"
              />
            </div>
          </div>
        </div>
      </StaggerIn>
    </section>

    <!-- Bad Lead Path Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-14">
            <h2 class="text-3xl md:text-4xl font-bold mb-5">Caminho de Leads Não Qualificados (Score &lt; 70)</h2>
            <p class="text-[var(--muted-foreground)] max-w-2xl mx-auto text-lg">
              Workflow de nutrição com 4 nós para leads que precisam de mais informações antes de receber proposta completa
            </p>
          </div>
          <div class="space-y-5">
            <WorkflowStep
              number="1"
              icon={Mail}
              title="AI Write Nurture Email"
              description="GPT-4o-mini gera email de acompanhamento solicitando gentilmente informações faltantes (orçamento, prazo)"
              variant="bad"
            />
            <WorkflowStep
              number="2"
              icon={Code}
              title="Parse Email"
              description="Nó de Código extrai conteúdo do email (assunto e corpo HTML)"
              variant="bad"
            />
            <WorkflowStep
              number="3"
              icon={Mail}
              title="Send Nurture Email"
              description="Nó de Envio de Email envia email de nutrição com link para continuar conversa"
              variant="bad"
            />
            <WorkflowStep
              number="4"
              icon={Save}
              title="Update Lead Status"
              description="Supabase atualiza status para 'nurturing' e inicia sequência de acompanhamento"
              variant="bad"
            />
          </div>
        </div>
      </StaggerIn>
    </section>

    <!-- Technologies Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Tecnologias</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-2xl mx-auto text-lg">
            Stack tecnológico completo para automação inteligente de leads
          </p>
          
          <div class="space-y-12">
            <!-- Development Tools -->
            <div>
              <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">Ferramentas de Desenvolvimento</h3>
              <p class="text-sm text-[var(--muted-foreground)] mb-6 max-w-2xl">
                Ferramentas de desenvolvimento e edição de código utilizadas no projeto
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <TechCard
                  client:load
                  icon={Code}
                  name="Cursor"
                  category="Development Tools"
                />
                <TechCard
                  client:load
                  icon={Bot}
                  name="Claude Code"
                  category="Development Tools"
                />
              </div>
            </div>

            <!-- Frontend Framework -->
            <div>
              <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">Frontend Framework</h3>
              <p class="text-sm text-[var(--muted-foreground)] mb-6 max-w-2xl">
                Frameworks e bibliotecas para construção da interface web
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <TechCard
                  client:load
                  icon={Code}
                  name="Astro"
                  category="Frontend Framework"
                />
                <TechCard
                  client:load
                  icon={Sparkles}
                  name="Vue"
                  category="Frontend Framework"
                />
                <TechCard
                  client:load
                  icon={FileCode}
                  name="React"
                  category="Frontend Framework"
                />
              </div>
            </div>

            <!-- AI Engine -->
            <div>
              <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">AI Engine</h3>
              <p class="text-sm text-[var(--muted-foreground)] mb-6 max-w-2xl">
                Modelos de Inteligência Artificial para análise e geração de conteúdo
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <TechCard
                  client:load
                  icon={Brain}
                  name="OpenAI GPT-5"
                  category="AI Engine"
                />
                <TechCard
                  client:load
                  icon={Brain}
                  name="GPT-4o-mini"
                  category="AI Engine"
                />
                <TechCard
                  client:load
                  icon={Sparkles}
                  name="Gemini Flash 2.5"
                  category="AI Engine"
                />
              </div>
            </div>

            <!-- Integrated Services -->
            <div>
              <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">Serviços Integrados</h3>
              <p class="text-sm text-[var(--muted-foreground)] mb-6 max-w-2xl">
                APIs e serviços externos para funcionalidades específicas do sistema
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <TechCard
                  client:load
                  icon={Database}
                  name="Supabase"
                  category="Integrated Services"
                />
                <TechCard
                  client:load
                  icon={Globe}
                  name="Vercel"
                  category="Integrated Services"
                />
                <TechCard
                  client:load
                  icon={FileCheck}
                  name="Nutrient.io"
                  category="Integrated Services"
                />
              </div>
            </div>

			     <!-- Automation Platform & Database -->
				 <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
					<!-- Automation Platform -->
					<div>
					  <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">Plataforma de Automação</h3>
					  <p class="text-sm text-[var(--muted-foreground)] mb-6">
						Ferramenta para construir e executar workflows automatizados
					  </p>
					  <div class="grid grid-cols-1 sm:grid-cols-1 gap-5">
						<TechCard
						  client:load
						  icon={Workflow}
						  name="n8n"
						  category="Automation Platform"
						/>
					  </div>
					</div>
	  
					<!-- Database -->
					<div>
					  <h3 class="text-xl font-semibold mb-6 text-[var(--foreground)]">Database</h3>
					  <p class="text-sm text-[var(--muted-foreground)] mb-6">
						Armazenamento e gerenciamento de dados estruturados
					  </p>
					  <div class="grid grid-cols-1 sm:grid-cols-1 gap-5">
						<TechCard
						  client:load
						  icon={Database}
						  name="PostgreSQL"
						  category="Database"
						/>
					  </div>
					</div>
				  </div>
	  
          </div>
        </div>
      </StaggerIn>
    </section>


	<FullWidthImage src="/img/prompt-engeneering.png" alt="Prompt Engineering" />


    <!-- Prompt Engineering Section -->
    <section class="container mx-auto px-4 py-20">
      <StaggerIn client:load stagger={100}>
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-5">Prompt Engineering</h2>
          <p class="text-center text-[var(--muted-foreground)] mb-14 max-w-3xl mx-auto text-lg">
            Metodologia estruturada e iterativa para criar prompts eficazes que maximizam a qualidade das respostas da IA
          </p>

          <!-- Context & Methodology -->
          <div class="mb-14">
            <div class="max-w-6xl mx-auto space-y-6">
              <div class="p-8 rounded-3xl bg-[var(--card)] border border-[var(--border)]/60">
